{
  "name": "pencroff",
  "version": "1.0.0",
  "description": "Hi. I am Sergey.",
  "main": "postcss.config.js",
  "scripts": {
    "tailwindcss": "tailwindcss --help",
    "dev-site": "hugo serve --gc",
    "dev-css": "npm run env NODE_ENV=development && tailwindcss --postcss ./postcss.config.js --input ./assets/css/styles.css --output ./assets/main.css --watch",
    "build": "npm run env NODE_ENV=production && tailwindcss -c ./tailwind.config.js -i ./assets/css/styles.css -o ./assets/main.css --minify"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@tailwindcss/typography": "^0.5.0",
    "autoprefixer": "^10.2.5",
    "postcss": "^8.2.15",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "tailwindcss": "^3.0.8"
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "maintained node versions",
    "not dead"
  ]
}
